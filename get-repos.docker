#!/usr/bin/env bash

set -euo pipefail

export DOCKER_BUILDKIT=1
docker build --file Dockerfile.get-repos --tag jekyll-pages/get-repos . >&2

docker run \
  --rm \
  --user "$UID:$(id -g)" \
  --volume "$HOME/.github-creds:/.github-creds" \
  --volume "$(readlink --canonicalize -- "$1"):/opt/repos" \
  jekyll-pages/get-repos
